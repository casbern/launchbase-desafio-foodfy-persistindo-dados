{% extends "admin/common/layout.njk" %}

{% block head %}
  <title>Chefs - Admin Foodfy</title>
  <link rel="stylesheet" href="/admin/chefs.css">
{% endblock %}

{% block content %}
<h3>Gerenciar chefs</h3>

<div class="wrapper-chefs">
{% for chef in chefs %}
  <div class="chefs">
  <img class="card-chef-avatar" src="{{chef.avatar_url}}">
  <div class="card-info">
  <p class="card-name">{{chef.name}}</p>
  <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
  </div>
  </div>
{% endfor %} 
</div>

{% endblock %}

