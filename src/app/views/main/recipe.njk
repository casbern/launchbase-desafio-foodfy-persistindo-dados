 {% extends "./layout.njk" %}

 {% block head %}
 <title>{{ recipe.title }}</title>

 <link rel="stylesheet" href="/main/recipe.css">
 {% endblock %}

 {% block content %}

 <div class="recipe">
   <div class="recipe-header">
     <img src="{{recipe.image}}" alt="{{recipe.title}}">
     <h1>{{recipe.title}}</h1>
     <h2>por {{recipe.name}}</h2>
   </div>

   <div class="recipe-content">
     <div id="ingredients" class="topic">
       <div class="button">
         <h3>Ingredients</h3>
         <h4 id="show-hide-ingredients">MOSTRAR</h4>
       </div>
       <div class="topic-content hide" id="topic-ingredients">
         <ul>

           {% for ingredient in recipe.ingredients %}
           <li>{{ingredient}}</li>
           {% endfor %}

         </ul>
       </div>
     </div>

     <div id="preparation" class="topic">
       <div class="button">
         <h3>Modo de Preparo</h3>
         <h4 id="show-hide-preparation">MOSTRAR</h4>
       </div>
       <div class="topic-content hide" id="topic-preparation">
         <ul>

           {% for preparation in recipe.preparation %}
           <li>{{preparation}}</li>
           {% endfor%}

         </ul>
       </div>
     </div>

     <div id="information" class="topic">
       <div class="button">
         <h3>Informacoes Adicionais</h3>
         <h4 id="show-hide-information">MOSTRAR</h4>
       </div>
       <div class="topic-content hide" id="topic-information">
         <p>{{recipe.information}}</p>
       </div>
     </div>
   </div>
 </div>

 {% endblock %}